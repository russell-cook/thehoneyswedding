@model HoneyWedding.Models.AccommodationLocation

<div class="mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
        @*<p class="mdl-card__title-text">@Html.DisplayFor(model => model.LocationName)</p>*@
    </div>
    <div class="mdl-card__supporting-text">
        <table class="table-list" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td class="table-list--term">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </td>
            </tr>
            <tr>
                <td class="table-list--term">
                    @Html.DisplayNameFor(model => model.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <td class="table-list--term">
                    @Html.DisplayNameFor(model => model.Website)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Website)
                </td>
            </tr>
            <tr>
                <td class="table-list--term">
                    @Html.DisplayNameFor(model => model.InFairPlay)
                </td>
                <td>
                    @Html.DisplayFor(model => model.InFairPlay)
                </td>
            </tr>
            <tr>
                <td class="table-list--term">
                    @Html.DisplayNameFor(model => model.DistanceFromVenue)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DistanceFromVenue) mi
                </td>
            </tr>
            <tr>
                <td class="table-list--term">
                    @Html.DisplayNameFor(model => model.Notes)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Notes)
                </td>
            </tr>
        </table>
    </div>

@model IEnumerable<HoneyWedding.Models.ApplicationUser>

@{
    ViewBag.Title = "Administration - User Accounts";
}

<div class="mdl-card mdl-card__page mdl-shadow--2dp">
    <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">@ViewBag.Title</h2>
    </div>
    <div class="mdl-card__supporting-text">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="mdl-data-table mdl-js-data-table">
            <thead>
                <th class="mdl-data-table__cell--non-numeric">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().LastName)
                </th>
                <th class="mdl-data-table__cell--non-numeric">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().FirstName)
                </th>
                <th class="mdl-data-table__cell--non-numeric">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().UserName)
                </th>
                <th class="mdl-data-table__cell--non-numeric">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().EmailConfirmed)
                </th>
                <th class="mdl-data-table__cell--non-numeric">

                </th>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td class="mdl-data-table__cell--non-numeric">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td class="mdl-data-table__cell--non-numeric">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td class="mdl-data-table__cell--non-numeric">
                        @Html.DisplayFor(modelItem => item.EmailConfirmed)
                    </td>
                    <td class="mdl-data-table__cell--non-numeric">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



@model HoneyWedding.Models.LoginViewModel

@{
    ViewBag.Title = "Log In";
}
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "mdl-card mdl-card__small-form mdl-shadow--2dp", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">@ViewBag.Title</h2>
        </div>
                <div class="mdl-card__supporting-text">
                    @Html.ValidationSummary(true, "", new { @class = "mdl-textfield__error" })
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.TextBoxFor(m => m.Email, new { @class = "mdl-textfield__input" })
                        @Html.LabelFor(m => m.Email, new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "mdl-textfield__error" })
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.PasswordFor(m => m.Password, new { @class = "mdl-textfield__input" })
                        @Html.LabelFor(m => m.Password, new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "mdl-textfield__error" })
                    </div>
                    <p>
                        <label class="mdl-checkbox mdl-js-checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "mdl-checkbox__input" })
                            @Html.LabelFor(m => m.RememberMe)
                        </label>
                    </p>
                    <p>
                        <input type="submit" class="mdl-button mdl-js-button mdl-button--raised" value="Log In" />
                    </p>
                    <p>
                        @Html.ActionLink("Forget your password?", "ForgotPassword")
                    </p>
                </div>
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model HoneyWedding.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "mdl-card mdl-card__small-form mdl-shadow--2dp", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ReplaceAutoPwd)
    if (Model.ReplaceAutoPwd == true)
    {
        <h4>Please replace your auto-generated password</h4>
    }
    <div class="mdl-card__title">
        <div class="mdl-card__title-text">@ViewBag.Title</div>
    </div>
    <div class="mdl-card__supporting-text">
        @Html.ValidationSummary("", new { @class = "" })
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "mdl-textfield__input" })
            @Html.LabelFor(m => m.OldPassword, new { @class = "mdl-textfield__label" })
            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "mdl-textfield__error" })
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "mdl-textfield__input" })
            @Html.LabelFor(m => m.NewPassword, new { @class = "mdl-textfield__label" })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "mdl-textfield__error" })
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "mdl-textfield__input" })
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "mdl-textfield__label" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "mdl-textfield__error" })
        </div>

        <input type="submit" value="Change password" class="mdl-button mdl-js-button mdl-button--raised" />

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model HoneyWedding.Models.WeddingGuestViewModel
@{
    ViewBag.Title = "RSVP";
}

<div class="mdl-grid">
    <div class="mdl-cell">

        <section id="rsvpForm">

            @using (Html.BeginForm("RSVP", "WeddingGuests", FormMethod.Post, new { @class = "mdl-card mdl-card__page-small", role = "form" }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.AntiForgeryToken()
                <div class="mdl-card__title">
                    <h2 class="mdl-card__title-text">RSVP</h2>
                </div>
                    <div class="mdl-card__supporting-text">
                        <p>Hello @Model.FirstName !</p>
                        @Html.ValidationSummary("", new { @class = "text-error" })
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "mdl-textfield__input" })
                            @Html.LabelFor(m => m.FirstName, new { @class = "mdl-textfield__label" })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "mdl-textfield__error" })
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "mdl-textfield__input" })
                            @Html.LabelFor(m => m.LastName, new { @class = "mdl-textfield__label" })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "mdl-textfield__error" })
                        </div>
                        <label class="mdl-checkbox mdl-js-checkbox">
                            @Html.CheckBoxFor(m => m.HasPlusOne, new { @class = "mdl-checkbox__input" })
                            <span class="mdl-checkbox__label">@Html.DisplayNameFor(m => m.HasPlusOne)</span>
                        </label>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            @Html.TextAreaFor(m => m.Notes, new { @class = "mdl-textfield__input" })
                            @Html.LabelFor(m => m.Notes, new { @class = "mdl-textfield__label" })
                            @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "mdl-textfield__error" })
                        </div>

                        @Html.LabelFor(m => m.Meatless, new { @class = "" })
                        @Html.EditorFor(m => m.Meatless, new { @class = "" })

                        <div class="form-group">
                            <input type="submit" class="mdl-button mdl-js-button mdl-button--raised" value="Submit RSVP" />
                        </div>
                    </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




